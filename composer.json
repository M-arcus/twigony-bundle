{
  "name": "timonf/twigony-framework-bundle",
  "type": "symfony-bundle",
  "description": "Twigony FrameworkBundle",
  "keywords": ["frontend", "twig", "template", "routing"],
  "license": "MIT",
  "authors": [
    {
      "name": "Timon F",
      "email": "dev@timonf.de"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "symfony/http-foundation": "~2.8|~3.0",
    "symfony/http-kernel": "~2.8|~3.0",
    "symfony/templating": "~2.8|~3.0",
    "symfony/framework-bundle": "~2.8|~3.0",
    "symfony/property-access": "~2.8|~3.0",
    "symfony/form": "~2.8|~3.0",
    "swiftmailer/swiftmailer": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1",
    "squizlabs/php_codesniffer": "^2.8"
  },
  "suggest": {
    "doctrine/orm": "^2.5",
    "twig/twig": "~1.26|~2.0"
  },
  "autoload": {
    "psr-4": { "Twigony\\Bundle\\FrameworkBundle\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "psr2": "vendor/bin/phpcs --standard=PSR2 Controller DependencyInjection Form Mailer Tests Resources TwigonyFrameworkBundle.php",
    "install-hook": [
      "echo '#!/bin/sh' >> .git/hooks/pre-commit",
      "echo 'composer run phpunit' >> .git/hooks/pre-commit",
      "echo 'composer run psr2' >> .git/hooks/pre-commit"
    ]
  },
  "minimum-stability": "dev"
}
